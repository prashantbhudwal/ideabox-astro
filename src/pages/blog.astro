---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Card, CardHeader, CardTitle, CardDescription } from "@/components/ui/card";
---

<BaseLayout title="All blog posts | Ideabox">
  <main class="container mx-auto px-4 py-8 max-w-6xl">
    <header class="mb-12">
      <h1 class="text-4xl font-bold tracking-tight">All Posts</h1>
      <p class="text-muted-foreground mt-2">Explore my thoughts and learnings</p>
    </header>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <Card className="hover:shadow-lg transition-shadow">
        <CardHeader>
          <div class="text-sm text-muted-foreground mb-2">Jan 1, 2024 • 5 min read</div>
          <CardTitle className="mb-2">
            <a href="/posts/hello-world" class="hover:text-primary">Hello World</a>
          </CardTitle>
          <CardDescription>
            An introduction to my blog and what you can expect from my future posts.
          </CardDescription>
        </CardHeader>
      </Card>

      <Card className="hover:shadow-lg transition-shadow">
        <CardHeader>
          <div class="text-sm text-muted-foreground mb-2">Jan 5, 2024 • 8 min read</div>
          <CardTitle className="mb-2">
            <a href="/posts/dear-coworker" class="hover:text-primary">Dear Coworker</a>
          </CardTitle>
          <CardDescription>
            Thoughts on effective collaboration and communication in the workplace.
          </CardDescription>
        </CardHeader>
      </Card>
    </div>
  </main>
</BaseLayout>
