---
import BaseLayout from "@/layouts/BaseLayout.astro";

const pageTitle = "About Ideabox";
const posts = [
  { title: "Post 1", excerpt: "This is the first post.", link: "#" },
  { title: "Post 2", excerpt: "This is the second post.", link: "#" },
  { title: "Post 3", excerpt: "This is the third post.", link: "#" },
];
---

<BaseLayout title={pageTitle}>
  <main class="container mx-auto p-4">
    <header class="text-center mb-8">
      <h1 class="text-4xl font-bold mb-2">{pageTitle}</h1>
      <h2 class="text-2xl text-gray-600 mb-4">... and my new Astro site!</h2>
      <h1 class="text-3xl font-semibold mb-2">Ideabox</h1>
      <h2 class="text-xl text-gray-500">
        Ideabox is a collection of my thoughts and ideas.
      </h2>
    </header>
    <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        posts.map((post) => (
          <article class="border p-4 rounded-lg shadow-lg">
            <h3 class="text-2xl font-bold mb-2">{post.title}</h3>
            <p class="text-gray-700 mb-4">{post.excerpt}</p>
            <a href={post.link} class="text-blue-500 hover:underline">
              Read more
            </a>
          </article>
        ))
      }
    </section>
  </main>
</BaseLayout>
